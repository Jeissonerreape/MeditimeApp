<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/registro"
tools:context=".C_RegistroJava"
android:fitsSystemWindows="true"
android:background="@drawable/fondo1">


<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/editTextname"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="30dp"

    android:layout_below="@id/linearCAM"
    app:startIconDrawable="@drawable/ic_username"
    tools:layout_alignParentStart="false"
    android:textColorHint="#505050"
    android:imeOptions="actionDone"
    app:boxStrokeColor="@color/guinda"
    app:hintTextColor="@color/guinda"
    app:hintTextAppearance="@style/CustomHintTextAppearance"
    app:boxBackgroundMode="filled"
    app:boxBackgroundColor="@color/custom_background_color"
    app:startIconTint="@color/black">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittextnamere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Nombre"
        android:paddingStart="45dp"
        android:textColor="#000000"
        android:textColorHint="#2E2E2E"
        android:textSize="18sp"
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,RtlSymmetry" />
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputcedula"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/editTextname"
        app:startIconDrawable="@drawable/nombrelibro"
        tools:layout_alignParentStart="false"
        android:textColorHint="#505050"
        android:imeOptions="actionDone"
        app:boxStrokeColor="@color/guinda"
        app:hintTextColor="@color/guinda"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/custom_background_color"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittextcedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="DNI"
            android:paddingStart="45dp"
            android:textColor="#000000"
            android:textColorHint="#2E2E2E"
            android:textSize="18sp"
            android:inputType="phone|number"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/editTexttel"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="30dp"
    android:layout_below="@id/textinputcedula"
    app:startIconDrawable="@drawable/telefono"
    tools:layout_alignParentStart="false"
    android:textColorHint="#505050"
    android:imeOptions="actionDone"
    app:boxStrokeColor="@color/guinda"
    app:hintTextColor="@color/guinda"
    app:hintTextAppearance="@style/CustomHintTextAppearance"
    app:boxBackgroundMode="filled"
    app:boxBackgroundColor="@color/custom_background_color"
    app:startIconTint="@color/black">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittexttelre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingStart="45dp"
        android:hint="Teléfono"
        android:textColor="#000000"
        android:textColorHint="#2E2E2E"
        android:textSize="18sp"
        android:inputType="phone|number"
        tools:ignore="HardcodedText,RtlSymmetry" />
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/testinputTextedad"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/editTexttel"
        app:startIconDrawable="@drawable/edad32"
        tools:layout_alignParentStart="false"
        android:textColorHint="#505050"
        android:imeOptions="actionDone"
        app:boxStrokeColor="@color/guinda"
        app:hintTextColor="@color/guinda"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/custom_background_color"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editetxtedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="45dp"
            android:hint="Edad"
            android:textColor="#000000"
            android:textColorHint="#2E2E2E"
            android:textSize="18sp"
            android:inputType="phone|number"
            tools:ignore="HardcodedText,RtlSymmetry" />
    </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/editTextTextEmailAddressre"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="30dp"
    android:layout_below="@id/testinputTextedad"
    app:startIconDrawable="@drawable/email"
    tools:layout_alignParentStart="false"
    android:textColorHint="#505050"
    android:imeOptions="actionDone"
    app:boxStrokeColor="@color/guinda"
    app:hintTextColor="@color/guinda"
    app:hintTextAppearance="@style/CustomHintTextAppearance"
    app:boxBackgroundMode="filled"
    app:boxBackgroundColor="@color/custom_background_color"
    app:startIconTint="@color/black">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittextcorreore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Correo"
        android:textColor="#000000"
        android:textColorHint="#2E2E2E"
        android:paddingStart="45dp"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        tools:ignore="HardcodedText,RtlSymmetry" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/editcontrare"
    android:layout_below="@id/editTextTextEmailAddressre"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    app:endIconMode="password_toggle"
    app:endIconDrawable="@drawable/password_icon"
    app:endIconTint="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:startIconDrawable="@drawable/ic_lock"
    android:textColorHint="#505050"
    tools:layout_alignParentStart="false"
    android:imeOptions="actionDone"
    app:boxStrokeColor="@color/guinda"
    app:hintTextAppearance="@style/CustomHintTextAppearance"
    app:boxBackgroundMode="filled"
    app:hintTextColor="@color/guinda"
    app:boxBackgroundColor="@color/custom_background_color"
    app:startIconTint="@color/black">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editcontraregistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Contraseña"
        android:textColor="#000000"
        android:textColorHint="#2E2E2E"
        android:paddingStart="45dp"
        android:textSize="18sp"
        android:inputType="text"
        tools:ignore="HardcodedText,RtlSymmetry" />
</com.google.android.material.textfield.TextInputLayout>





<LinearLayout
    android:visibility="gone"
    android:id="@+id/linearCAM"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="60dp"
    android:gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/background_textview"
    android:orientation="horizontal">

    <!-- Contenedor con FrameLayout para superponer Lottie sobre la imagen -->
    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="100dp">

        <!-- ImageView para la foto -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewfoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="1dp"
            android:background="#CCFFFFFF"
            android:scaleType="fitCenter"
            app:shapeAppearanceOverlay="@style/redondearimagenshaeable20"
            app:srcCompat="@drawable/fotomas02"
            app:strokeColor="#83080A0C"
            app:strokeWidth="4dp"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        <!-- Animación Lottie sobre la imagen -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_fondo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/clickanimated" />

    </FrameLayout>

    <!-- TextView de carga de foto -->
    <TextView
        android:id="@+id/textViewCargarFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cargue una foto de perfil"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"

        tools:ignore="HardcodedText" />

</LinearLayout>


<LinearLayout
    android:id="@+id/linearpoliticas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/editcontrare"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@color/white"
    android:layout_marginTop="20dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkpoliticas"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="12dp"

        android:text="Aceptar políticas y tratamiento de datos"
        tools:ignore="HardcodedText" />

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_alignParentBottom="true"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="20dp"
    >



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btncancelarRegistro"
        style="@style/RectangularButtonStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/principal_naranja"
        android:fontFamily="sans-serif-medium"

        android:text="Cancelar"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnregistarre"
        style="@style/RectangularButtonStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:backgroundTint="@color/colorstatusbar"
        android:fontFamily="sans-serif-medium"
        android:text="Registrarse"

        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

</LinearLayout>


</RelativeLayout>

